{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "baseUrl": "src",
    "outDir": "dist",

    "paths": {
      "@gentifly/environment/*": [ "*" ]
    },

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "@types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "files": [ "./node_modules/@gentifly/exceptions/@types/index.d.ts" ]
}
